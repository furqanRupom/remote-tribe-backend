{
  "name": "remote-tribe-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
    "seed": "ts-node-dev --respawn --transpile-only seed/seed.ts",
    "start": "node dist/server.js",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint-check": "eslint --ignore-path .eslintignore --ext .js,.ts .",
    "lint-fix": "eslint . --fix",
    "fix": "npm run lint -- --fix",
    "prettier": "npx prettier --write src/index.ts",
    "prettier-check": "prettier --ignore-path .gitignore --write \"**.+(js|ts|json)\"",
    "prettier-fix": "prettier --write .",
    "lint-prettier": "npm run lint-check && npm run prettier-check",
    "prisma:generate": "prisma generate",
    "logs:clean": "rimraf logs/*",
    "prestart": "mkdirp logs"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.3",
    "prisma": "^6.7.0",
    "redis": "^5.0.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.8.3",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@prisma/client": "^6.7.0",
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.18",
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/morgan": "^1.9.9",
    "@types/nodemailer": "^6.4.17",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "mkdirp": "^3.0.1",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.0",
    "ts-jest": "^29.3.2"
  }
}
